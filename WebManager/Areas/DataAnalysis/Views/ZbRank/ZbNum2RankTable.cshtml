<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>主播二消个数排名</title>
</head>
@{
    string c_date_e = ViewBag.c_date_e;
    string c_date_s = ViewBag.c_date_s;
    string dateRange = c_date_s + " ~ " + c_date_e;
}
<body style="padding: 10px; background-color: #ffffff">

    <blockquote class="layui-elem-quote news_search">
        <div class="layui-inline">
            <form class="layui-form">
                <div class="layui-inline">
                    <label class="layui-form-label">日期范围</label>
                    <div class="layui-input-inline">
                        <input type="text" class="layui-input" id="dateRange" name="dateRange" value="@dateRange" placeholder="选择日期范围">
                    </div>
                </div>
                <button type="submit" class="layui-btn search_btn">查询</button>
            </form>
        </div>
        <a style="color:blue;float:right;font-size:17px;" href="javascript:parent.win_pop_iframe('规则说明', '@(new ServiceFactory.HelpService().GetLink("1"))', 800,800,'');">排名规则说明</a>

    </blockquote>

    <div class="layui-tab layui-tab-brief" lay-filter="docDemoTabBrief">
        <ul class="layui-tab-title">
            <li style="padding: 0 14px;">
                <a href="/DataAnalysis/zbrank/ZbNewNumRankTable?dateRange=@dateRange">主播平均拉新个数</a>
            </li>
            <li class="layui-this" lay-id="11">主播平均二消个数</li>
            <li style="padding: 0 14px;">
                <a href="/DataAnalysis/zbrank/ZbAmount2RankTable?dateRange=@dateRange&option=1">主播平均二消音浪</a>
            </li>
            <li style="padding: 0 14px;">
                <a href="/DataAnalysis/zbrank/ZbContactNumRankTable?dateRange=@dateRange">主播平均建联数</a>
            </li>
        </ul>
    </div>

    @{
        // 如果当天主播出现请假、未提报数据者或者拉新、首消音浪、二消个数、建联、二消音浪这些数据同时为0，则不计入有效主播总人数的统计
        var jixiaoDayList = DoMySql.FindList<ModelDb.p_jixiao_day>($"tenant_id = '{new DomainBasic.TenantApp().GetInfo().id}' and DATE(c_date) between '{c_date_s}' and '{c_date_e}' and (new_num!=0 or amount_1!=0 or num_2!=0 or amount_2!=0 or contact_num!=0)"); // 筛选周期内所有绩效数据

        var newList = new List<ServiceFactory.DataAnalysis.ZbJixiaoNum2RankModel>(); // 构造待排序列表

        // 获取所有主播
        foreach (var item in new ServiceFactory.UserInfo.Zhubo().GetBaseInfos(new ServiceFactory.UserInfo.Zhubo.ZbBaseInfoFilter()))
        {
            var zbJixiaoList = jixiaoDayList.Where(x => x.zb_user_sn == item.user_sn).ToList(); // 主播绩效数据

            var jixiaoDaysCount = zbJixiaoList.Count();  // 提交记录数
            var num2Sum = zbJixiaoList.Sum(c => c.num_2); // 总拉新

            newList.Add(new ServiceFactory.DataAnalysis.ZbJixiaoNum2RankModel
            {
                ting_sn = item.ting_sn, // 用于在Model中获取所属厅名
                user_name = item.user_name, // 主播名
                num2_sum = num2Sum, // 总拉新
                num2_average = jixiaoDaysCount > 0 ? num2Sum.ToDecimal() / jixiaoDaysCount.ToDecimal() : 0, // 主播平均拉新个数 = 总拉新 / 提交记录数
            });
        }

        <table class="layui-table" style="text-align:center;" id="table" name="table" width="100%">
            <colgroup>
                <col width="100">
                <col width="100">
                <col width="100">
                <col width="100">
                <col width="100">
                <col width="100">
            </colgroup>
            <thead>
                <tr style="background-color: #DAE3F4; font-weight: 700;">
                    <th>主播</th>
                    <th>所属厅</th>
                    <th>总二消个数</th>
                    <th>主播平均二消个数</th>
                    <th>主播排名</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rank = 1;
                    <tr style="background-color: #FBE6D5">
                        @foreach (var zb in newList.OrderByDescending(x => x.num2_average).Take(50))
                        {
                        @:</tr><tr style="background-color: #FBE6D5">
                            <td>@zb.user_name</td>
                            <td>@zb.ting_name</td>
                            <td>@zb.num2_sum</td>
                            <td>@zb.num2_average.ToDouble().ToString("0.00")</td>
                            switch (rank)
                            {
                                case 1:
                                    <td><img src="/Assets/images/rank1.png" width="30" height="30"></td>
                                    break;
                                case 2:
                                    <td><img src="/Assets/images/rank2.png" width="30" height="30"></td>
                                    break;
                                case 3:
                                    <td><img src="/Assets/images/rank3.png" width="30" height="30"></td>
                                    break;
                                case 4:
                                    <td><img src="/Assets/images/rank4.png" width="30" height="30"></td>
                                    break;
                                case 5:
                                    <td><img src="/Assets/images/rank5.png" width="30" height="30"></td>
                                    break;
                                default:
                                    <td>@rank</td>
                                    break;
                            }
                            rank++;
                            <td>
                                <div style="text-align:center;">
                                    <a href="javascript:LineChart('@zb.user_sn');" class="layui-btn layui-bg-blue">查看图表</a>
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
</body>
</html>
