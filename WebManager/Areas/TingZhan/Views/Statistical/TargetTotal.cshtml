
@using WeiCode.Utility;
@using WeiCode.DataBase;
@using WeiCode.Services;

@using WeiCode.Domain;
@using WeiCode.Models;
@using WeiCode.ModelDbs;
@using Services.Project;


<!-- 页面通用母版 -->
@{
    Layout = ModelBasic.PageModel.GetLayout();
    var p_tingzhan = new ServiceFactory.TingZhanService().getNewTingzhan();
}
<style>
    .layui-table td, .layui-table th, .layui-table-col-set, .layui-table-fixed-r,
    .layui-table-grid-down, .layui-table-header, .layui-table-page, .layui-table-tips-main,
    .layui-table-tool, .layui-table-total, .layui-table-view, .layui-table[lay-skin=line], .layui-table[lay-skin=row] {
        border-collapse: collapse;
        border-style: solid;
        border-width: 1px;
        border-color: gray;
    }

    .layui-table th {
        text-align: center;
        font-weight: 700;
        font-size: 15px;
    }

    .layui-table td {
        font-size: 15px;
        min-width: 50px;
    }

    /* 表头固定样式 */
    .layui-table {
        position: relative;
    }

        .layui-table thead {
            position: sticky;
            top: 0;
            z-index: 10;
            background-color: white;
        }

            .layui-table thead tr:first-child {
                position: sticky;
                top: 0;
                z-index: 11;
                background-color: #FFF3CA;
            }

            .layui-table thead tr:nth-child(2) {
                position: sticky;
                top: 50px; /* 第一行表头的高度 */
                z-index: 11;
                background-color: #FCE4D3;
            }

            /* 确保表头有足够的背景色 */
            .layui-table thead th {
                background-color: inherit;
            }
</style>
<!-- 以下书写自己的页面内容代码 -->
<form class="layui-form">
    <div class="layui-row">
        <div class="layui-col-md10">
            <div class="layui-col-md8" style="text-align:right">
                <div class="layui-inline">
                    <label class="layui-input-inline" style="font-size: 18px; font-weight: bold; padding: 10px;">厅战时间：@p_tingzhan.c_date.ToDate().ToString("yyyy-MM-dd")</label>
                </div>
            </div>
        </div>
        <div class="layui-card" style="width:95%;top:30px;margin:0 auto">
            @if (ViewBag.targets.Count > 0)
            {
                decimal ting_count_sum = 0;
                decimal commit_count_sum = 0;
                <table class="layui-table">
                    <thead>
                        <tr style="background-color: #B4C6E7;">
                            <td style="text-align: center">团队</td>
                            <td style="text-align: center">厅数量</td>
                            <td style="text-align: center">已提报</td>
                            @*<td style="text-align: center">不参加</td>*@
                            <td style="text-align: center">提报率</td>
                            <td style="text-align: center">未提报名单</td>
                        </tr>
                    </thead>
                    @foreach (var item in ViewBag.targets)
                    {
                        decimal ting_count = new ServiceFactory.UserInfo.Ting().GetBaseInfos(new ServiceFactory.UserInfo.Ting.TgBaseInfoFilter
                        {
                            attachUserType = new ServiceFactory.UserInfo.Ting.TgBaseInfoFilter.AttachUserType()
                            {
                                userType = ServiceFactory.UserInfo.Ting.TgBaseInfoFilter.AttachUserType.UserType.运营,
                                UserSn = item.yy_user_sn
                            }
                        }).Count;
                        decimal commit_count = DoMySql.FindList<ModelDb.p_tingzhan_target>($"tingzhan_id = {p_tingzhan.id} and yy_user_sn = '{item.yy_user_sn}'").Count;
                        ting_count_sum += ting_count;
                        commit_count_sum += commit_count;
                        <tr style="background-color: #FFF2CC;">
                            <td style="text-align: center">@(new ServiceFactory.UserInfo.Yy().GetInfoByUserSn(item.yy_user_sn).name)</td>
                            <td style="text-align: center">@ting_count</td>
                            <td style="text-align: center">@commit_count</td>
                            @*<td style="text-align: center">@(DoMySql.FindList<ModelDb.p_tingzhan_target>($"tingzhan_id = {p_tingzhan.id} and yy_user_sn = '{item.yy_user_sn}' and amont = 0").Count)</td>*@
                            <td style="text-align: center">@(ting_count > 0 ? Math.Round((commit_count / ting_count * 100).ToDecimal(), 2) : 0)%</td>
                            <td style="text-align: center">@(DoMySql.FindGroupConcat<ModelDb.user_info_tg>("ting_name", $"yy_user_sn = '{item.yy_user_sn}' and ting_sn not in (select ting_sn from p_tingzhan_target where tingzhan_id = {p_tingzhan.id})").Replace(',', ';'))</td>
                        </tr>
                    }
                    <tr style="background-color: #E3F2D9 ">
                        <td style="text-align: center;">合计</td>
                        <td style="text-align: center;">@ting_count_sum</td>
                        <td style="text-align: center;">@commit_count_sum</td>
                        @*<td style="text-align: center;"></td>*@
                        <td style="text-align: center;">@(ting_count_sum > 0 ? Math.Round((commit_count_sum / ting_count_sum * 100).ToDecimal(), 2) : 0)%</td>
                        <td style="text-align: center;"></td>
                    </tr>
                </table>
            }
        </div>
    </div>
    @if (ViewBag.targets.Count == 0)
    {
        <div class="layui-card-body layui-text">
            <blockquote class="layui-elem-quote" style="border: none;">
                <p style="color: orangered;">无厅战活动</p>
            </blockquote>
        </div>
    }
</form>
<script>
    layui.use('form', function () {
        var form = layui.form;
        form.render('select'); // 仅渲染 select 元素
    });
</script>
