
@using WeiCode.Utility;
@using WeiCode.DataBase;
@using WeiCode.Services;

@using WeiCode.Domain;
@using WeiCode.Models;
@using WeiCode.ModelDbs;
@using Services.Project;


<!-- 页面通用母版 -->
@{
    Layout = ModelBasic.PageModel.GetLayout();
    var c_date = DateTime.Today.AddMonths(-1).ToString("yyyy-MM").ToDate();
    DateTime startDate = new DateTime(c_date.Year, c_date.Month, 1); // 上个月的第一天
    DateTime endDate = startDate.AddMonths(1).AddDays(-1); // 上个月的最后一天
}
<style>
    body {
        background-color: #fff;
    }

    .layui-table td, .layui-table th, .layui-table-col-set, .layui-table-fixed-r,
    .layui-table-grid-down, .layui-table-header, .layui-table-page, .layui-table-tips-main,
    .layui-table-tool, .layui-table-total, .layui-table-view, .layui-table[lay-skin=line], .layui-table[lay-skin=row] {
        border-collapse: collapse;
        border-style: solid;
        border-width: 1px;
        border-color: gray;
    }

    .layui-table th {
        text-align: center;
        font-weight: 700;
        font-size: 15px;
    }

    .layui-table td {
        font-size: 15px;
        min-width: 50px;
    }

    /* 表头固定样式 */
    .layui-table {
        position: relative;
    }

        .layui-table thead {
            position: sticky;
            top: 0;
            z-index: 10;
            background-color: white;
        }

            .layui-table thead tr:first-child {
                position: sticky;
                top: 0;
                z-index: 11;
                background-color: #FFF3CA;
            }

            .layui-table thead tr:nth-child(2) {
                position: sticky;
                top: 50px; /* 第一行表头的高度 */
                z-index: 11;
                background-color: #FCE4D3;
            }

            /* 确保表头有足够的背景色 */
            .layui-table thead th {
                background-color: inherit;
            }
</style>
<!-- 以下书写自己的页面内容代码 -->
<form class="layui-form">
    <div class="layui-row">
        <div class="layui-col-md12" style="text-align: center; position: fixed; top: 10px; background-color:#ffffff; z-index:9999; padding:8px;">
            <button type="button" class="layui-btn layui-btn-normal" id="btn-submit">确认无误</button>
        </div>
    </div>
    <div class="layui-row">
        <div class="layui-card" style="width:95%;padding-top:60px;margin:0 auto">
            <table class="layui-table">
                <thead>
                    <tr>
                        <td colspan="34" style="font-size: 18px; text-align: center; font-weight: bold">@(c_date.ToString("yyyy年MM月"))推人数据</td>
                    </tr>
                    <tr style="background-color: #D9E1F4">
                        <td style="text-align: center;">名字</td>
                        <td style="text-align: center; min-width: 60px;">数据</td>
                        @for (DateTime date = startDate; date <= endDate; date = date.AddDays(1))
                        {
                            <td style="text-align:center">@date.ToString("M.dd")</td>
                        }
                        <td style="text-align:center">合计</td>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var p_liuliang_infos = DoMySql.FindList<ModelDb.p_liuliang_info>($"wx_user_sn = '{new UserIdentityBag().user_sn}' and DATE_FORMAT(c_date, '%Y-%m') = '{c_date.ToString("yyyy-MM")}'");
                        <tr>
                            <td style="text-align: center">@(new UserIdentityBag().username)</td>
                            <td style="text-align:center">推出人数</td>
                            @{
                                int? num_sum = 0;
                                for (DateTime date = startDate; date <= endDate; date = date.AddDays(1))
                                {
                                    var p_liuliang_info = p_liuliang_infos.Find(x => x.c_date.ToDate().ToString("yyyy-MM-dd") == date.ToString("yyyy-MM-dd"));
                                    var num = "";
                                    if (p_liuliang_info != null)
                                    {
                                        num = p_liuliang_info.num.ToString();
                                        num_sum += p_liuliang_info.num;
                                    }
                                    <td style="text-align:center">@num</td>
                                }
                                <td style="text-align:center">@num_sum</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>
<script>
    layui.use('form', function () {
        var form = layui.form;
        form.render('select'); // 仅渲染 select 元素
    });

    $('#btn-submit').on('click', function () {
        layer.confirm('是否确认提交?', { icon: 3, title: '提示' }, function (index) {
            $.ajax({
                type: "POST",
                url: "/LiuLiang/Commission/Post",
                data: {},
                async: false,
                dataType: 'json',
                success: function (e) {
                    if (e.code == 0) {
                        layer.msg(e.msg, {
                            icon: 6
                            , shade: 0
                        });
                        location.href = '/LiuLiang/Commission/Index';
                    } else {
                        layer.msg(e.msg, {
                            icon: 5
                            , shade: 0
                        });
                    }
                },
                error: function () {
                    alert('操作失败');
                }
            });

            layer.close(index);
        });
    });
</script>
