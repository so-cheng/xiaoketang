@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑账号</title>
    <link href="/Assets/layui/css/layui.css" rel="stylesheet" />
    <link href="/Assets/css/animate.min.css" rel="stylesheet" />
    <style>
        .z-body {
            margin: 30px;
        }

        .rightmenu {
            position: absolute;
            width: 110px;
            z-index: 9999;
            display: none;
            background-color: #fff;
            padding: 2px;
            color: #333;
            border: 1px solid #eee;
            border-radius: 2px;
            cursor: pointer
        }

            .rightmenu li {
                text-align: center;
                display: block;
                height: 30px;
                line-height: 30px;
                margin: 8px 0 8px 0
            }

                .rightmenu li:hover {
                    background-color: #f2f2f2;
                    color: #000
                }
    </style>
</head>
<body>
    <div class="z-body animated fadeIn">
        <form class="layui-form layui-form-pane">
            <input type="hidden" name="id" value="@ViewBag.sys_manager.id" />
            <div class="layui-form-item">
                <label for="name" class="layui-form-label">
                    用户名
                </label>
                <div class="layui-input-block">
                    <input type="text" id="name" name="name" value="@ViewBag.sys_manager.name" lay-verify="required" lay-vertype="tips" autocomplete="off" placeholder="请输入用户名" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="password" class="layui-form-label">
                    密码
                </label>
                <div class="layui-input-block">
                    <input type="password" id="password" name="password" value="" lay-verify="" lay-vertype="tips" autocomplete="off" placeholder="请输入密码" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="username" class="layui-form-label">
                    账号
                </label>
                <div class="layui-input-block">
                    <input type="text" id="username" name="username" value="@ViewBag.sys_manager.username" lay-verify="required" lay-vertype="tips" autocomplete="off" placeholder="请输入账号" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label for="organize_id" class="layui-form-label">
                    所属部门
                </label>
                <div class="layui-input-block">
                    <select id="organize_id" name="organize_id" lay-verify="required">
                        <option value="">请选择</option>
                        @foreach (var item in ViewBag.sys_organize)
                        {
                            <option value="@item.id">@item.name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label for="role_id" class="layui-form-label">
                    角色
                </label>
                <div class="layui-input-block">
                    <select id="role_id" name="role_id" lay-verify="required">
                        <option value="">请选择</option>
                        @foreach (var item in ViewBag.sys_role)
                        {
                            <option value="@item.id">@item.name</option>
                        }
                    </select>
                </div>
            </div>
            <div class="layui-form-item">
                <label for="status" class="layui-form-label">
                    状态
                </label>
                <div class="layui-input-block">
                    <input type="radio" name="status" value="0" title="可用" checked>
                    <input type="radio" name="status" value="1" title="禁用">
                </div>
            </div>
            <div class="layui-form-item">
                <div class="layui-input-block" style="margin-left:0;text-align:center;">
                    <button class="layui-btn layui-btn-normal" lay-submit="" lay-filter="add">保存</button>
                </div>
            </div>
        </form>
    </div>
    <script src="/Assets/js/jquery.js"></script>
    <script src="/Assets/layui/layui.js"></script>
    <script src="~/Assets/js/common.js"></script>
    <script>

        layui.config({
            base: '/Assets/layui/extend/'
        }).use(['form', 'layer', 'element'], function () {
            var $ = layui.jquery,
                form = layui.form,
                layer = layui.layer,
                element = layui.element;

            // 监听提交
            form.on('submit(add)', function (form) {
                $.post('/Config/Manager/Edit', form.field, function (result) {
                    layerMsg_P(result.msg, result.code);
                }, 'json');
                return false;
            });

            $("#organize_id").val(@ViewBag.sys_manager.organize_id);
            $("#role_id").val(@ViewBag.sys_manager.role_id);
            $("input[type=radio][value=@ViewBag.sys_manager.status]").next().trigger('click');

            form.render('select');
        });
    </script>
</body>
</html>