<script>
    layui.use(['form', 'element'], function () {
        var $ = layui.jquery,
            form = layui.form,
            element = layui.element;

        $(function () {
            form.render();
            $(".layui-anim>dd")[0].click()
            form.render('select');
        });
    });
</script>







