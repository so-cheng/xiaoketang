@using System;
@using WeiCode.Utility;
@using WeiCode.DataBase;
@using WeiCode.Services;

@using WeiCode.Domain;
@using WeiCode.Models;
@using WeiCode.ModelDbs;
@using Services.Project;
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>用户资料</title>
    <style>
        body {
            margin: 0;
            background: #f7f7f7;
            font-family: -apple-system,BlinkMacSystemFont,'Segoe UI','PingFang SC','Hiragino Sans GB','Microsoft YaHei','Helvetica Neue',Helvetica,Arial,sans-serif;
            color: #222;
        }

        .status-bar {
            height: 28px;
            background: #f5f5f5;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f5f5f5;
            height: 48px;
            position: relative;
            border-bottom: 1px solid #ededed;
        }

            .header .back {
                position: absolute;
                left: 12px;
                top: 0;
                height: 48px;
                display: flex;
                align-items: center;
                background: none;
                border: none;
                font-size: 24px;
                color: #222;
                cursor: pointer;
            }

        .header-title {
            font-size: 19px;
            font-weight: 500;
            color: #222;
        }

        .section {
            background: #fff;
            margin-top: 12px;
            border-radius: 0;
            box-shadow: none;
        }

        .section-list {
            border-top: 1px solid #ededed;
            border-bottom: 1px solid #ededed;
        }

        .section-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 16px;
            height: 48px;
            font-size: 17px;
            color: #222;
            border-bottom: 1px solid #ededed;
            background: #fff;
        }

            .section-item:last-child {
                border-bottom: none;
            }

        .arrow {
            color: #bbb;
            font-size: 18px;
        }

        .section-label {
            color: #888;
            font-size: 15px;
            padding: 12px 16px 4px 16px;
            background: #f7f7f7;
        }

        .section-more {
            background: #f1f1f1;
            color: #888;
            font-size: 15px;
            padding: 10px 16px 10px 16px;
        }

        .section-group {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 16px;
            height: 48px;
            font-size: 16px;
            color: #222;
            background: #fff;
            border-bottom: 1px solid #ededed;
        }

            .section-group:last-child {
                border-bottom: none;
            }

        .section-signature {
            color: #888;
            font-size: 15px;
            padding: 12px 16px 0 16px;
            background: #fff;
            line-height: 1.7;
            word-break: break-all;
        }

        .section-info-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 16px;
            height: 44px;
            font-size: 15px;
            color: #222;
            background: #fff;
            border-bottom: 1px solid #ededed;
        }

            .section-info-row:last-child {
                border-bottom: none;
            }

        .section-info-label {
            color: #888;
        }

        .section-info-value {
            color: #222;
        }

        @@media (max-width: 500px) {
            .section-item, .section-group, .section-info-row {
                padding-left: 8px;
                padding-right: 8px;
            }

            .section-label, .section-signature, .section-more {
                padding-left: 8px;
                padding-right: 8px;
            }
        }

        .avatar {
            width: 68px;
            height: 68px;
            border-radius: 12px;
            object-fit: cover;
            margin-right: 16px;
            background: #eee;
        }
    </style>
</head>
<body>
    @{
        var edit_link = $"/pcrm/pcrm/CrmPost?id={ViewBag.customer.id}";
    }
    <div class="status-bar"></div>
    <div class="header">
        <button class="back">&#8592;</button>
        <span class="header-title">用户资料</span>
    </div>
    <div class="section-list">
        <a class="section-item" href="@edit_link" style="text-decoration: none; color: inherit; height: 90px;"><img class="avatar" src="@ViewBag.customer.img_url" alt="头像"><span class="arrow">&#8250;</span></a>
    </div>
    <div class="section-label">备注</div>
    <div class="section-list">
        <a class="section-item" href="@edit_link" style="text-decoration: none; color: inherit; min-height:50px; height: auto;">备注<span class="section-info-value">@ViewBag.customer.demo</span><span class="arrow">&#8250;</span></a>
    </div>
    <div class="section-label">基本信息</div>
    <div class="section-list">
        <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">用户评级<span class="section-info-value">@(new DomainCrm.CustomerApp().GetInfoBySn(ViewBag.customer.crm_sn).grade_name)</span><span class="arrow">&#8250;</span></a>
        <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">第一次进厅时间<span class="section-info-value">@ViewBag.customer.first_time</span><span class="arrow">&#8250;</span></a>
        <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">用户昵称<span class="section-info-value">@ViewBag.customer.nick</span><span class="arrow">&#8250;</span></a>
        <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">用户抖音号<span class="section-info-value">@ViewBag.customer.dou_user</span><span class="arrow">&#8250;</span></a>
        <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">抖音号等级<span class="section-info-value">@ViewBag.customer.user_level</span><span class="arrow">&#8250;</span></a>
        <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">是否加V<span class="section-info-value">@ViewBag.customer.has_wechat</span><span class="arrow">&#8250;</span></a>
        <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">首次消费值<span class="section-info-value">@ViewBag.customer.first_consum</span><span class="arrow">&#8250;</span></a>
        <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">建联时间<span class="section-info-value">@ViewBag.customer.contact_time</span><span class="arrow">&#8250;</span></a>
        @{
            if (ViewBag.customer.contact_time == null)
            {
                <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">建联时长<span class="section-info-value"></span><span class="arrow">&#8250;</span></a>
            }
            else
            {
                var days = (DateTime.Now - ViewBag.customer.contact_time).Days;
                <a class="section-item" href="@edit_link" style="text-decoration:none;color:inherit;">建联时长<span class="section-info-value">@days</span><span class="arrow">&#8250;</span></a>
            }
        }

    </div>
    <div class="section-more">更多信息</div>
    <div class="section-info-row"><span class="section-info-label">家乡/现居地</span><span class="section-info-value">@ViewBag.customer.address</span></div>
    <div class="section-info-row"><span class="section-info-label">认识方式</span><span class="section-info-value">@(new DomainBasic.DictionaryApp().GetKeyFromValue("与用户的认识方式", ViewBag.customer.know_type))</span></div>
    <div class="section-info-row"><span class="section-info-label">用户职业</span><span class="section-info-value">@ViewBag.customer.user_job</span></div>
    <div class="section-info-row"><span class="section-info-label">生活作息</span><span class="section-info-value">@(new DomainBasic.DictionaryApp().GetKeyFromValue("用户生活作息", ViewBag.customer.user_life))</span></div>
    <div class="section-info-row"><span class="section-info-label">感情状态</span><span class="section-info-value">@ViewBag.customer.emo_status</span></div>
    <div class="section-info-row"><span class="section-info-label">爱好</span><span class="section-info-value">@ViewBag.customer.user_like</span></div>
    <div class="section-info-row"><span class="section-info-label">生日</span><span class="section-info-value">@ViewBag.customer.user_birthday</span></div>
    <div class="section-info-row"><span class="section-info-label">人格属性（MBTI）</span><span class="section-info-value">@(new DomainBasic.DictionaryApp().GetKeyFromValue("MBTI", ViewBag.customer.mbti))</span></div>

    <script type="text/javascript" src="@UtilityStatic.ConfigHelper.GetConfigString("ResourceUrl")/jquery/jquery.js"></script>
    <script>
        // 返回名片页
        $('.back').on('click', function () {
            window.location.href = "/PCrm/Info/Detail?id=" + @ViewBag.customer.id;
        });
    </script>
</body>
</html>