
@using WeiCode.Utility;
@using WeiCode.DataBase;
@using WeiCode.Services;

@using WeiCode.Domain;
@using WeiCode.Models;
@using WeiCode.ModelDbs;
@using Services.Project;

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>用户名片</title>
    <link rel="stylesheet" href="@UtilityStatic.ConfigHelper.GetConfigString("ResourceUrl")/layui/css/layui.css" media="all">
    <style>
        body {
            margin: 0;
            background: #f7f7f7;
            font-family: -apple-system,BlinkMacSystemFont,'Segoe UI','PingFang SC','Hiragino Sans GB','Microsoft YaHei','Helvetica Neue',Helvetica,Arial,sans-serif;
            color: #222;
        }

        .status-bar {
            height: 28px;
            background: #fff;
        }

        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: #fff;
            height: 48px;
            padding: 0 12px;
            border-bottom: 1px solid #ededed;
        }

            .header .back {
                font-size: 24px;
                color: #222;
                background: none;
                border: none;
                padding: 0;
                margin-right: 8px;
                cursor: pointer;
            }

            .header .more {
                font-size: 24px;
                color: #222;
                background: none;
                border: none;
                padding: 0 4px;
                cursor: pointer;
            }

        .profile {
            background: #fff;
            display: flex;
            align-items: center;
            padding: 24px 16px 16px 16px;
        }

        .avatar {
            width: 68px;
            height: 68px;
            border-radius: 12px;
            object-fit: cover;
            margin-right: 16px;
            background: #eee;
        }

        .profile-info {
            flex: 1;
        }

        .profile-row {
            display: flex;
            align-items: center;
        }

        .nickname {
            font-size: 22px;
            font-weight: 600;
            margin-right: 6px;
        }

        .verified {
            color: #409eff;
            font-size: 18px;
            margin-left: 2px;
        }

        .profile-info .meta {
            color: #888;
            font-size: 15px;
            margin-top: 6px;
            line-height: 1.6;
        }

        .section-list {
            margin-top: 12px;
            background: #fff;
            border-top: 1px solid #ededed;
            border-bottom: 1px solid #ededed;
        }

        .section-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 16px;
            height: 48px;
            font-size: 17px;
            color: #222;
            border-bottom: 1px solid #ededed;
            background: #fff;
        }

            .section-item:last-child {
                border-bottom: none;
            }

        .arrow {
            color: #bbb;
            font-size: 18px;
        }

        .moments-row {
            display: flex;
            align-items: center;
            padding: 0 16px 12px 16px;
            background: #fff;
        }

        .moments-label {
            font-size: 17px;
            color: #222;
            margin-right: 18px;
            flex-shrink: 0;
        }

        .moments-photos {
            display: flex;
            align-items: center;
            gap: 8px;
            overflow: hidden;
            max-width: 220px;
        }

        .moments-photo {
            width: 44px;
            height: 44px;
            border-radius: 10px;
            object-fit: cover;
            background: #eee;
            box-shadow: 0 1px 4px rgba(0,0,0,0.06);
            transition: transform 0.15s, box-shadow 0.15s;
        }

            .moments-photo:hover {
                transform: scale(1.06);
                box-shadow: 0 2px 8px rgba(0,0,0,0.12);
            }

        .moments-arrow {
            color: #bbb;
            font-size: 18px;
            margin-left: 12px;
            flex-shrink: 0;
        }

        .actions {
            background: #fff;
            margin-top: 18px;
            padding: 0 0 18px 0;
        }

        .action-btn {
            width: 92%;
            margin: 16px auto 0 auto;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 44px;
            border-radius: 8px;
            border: none;
            font-size: 18px;
            color: #3c3c3c;
            background: #f5f6fa;
            cursor: pointer;
            transition: background 0.2s;
        }

            .action-btn.primary {
                background: #409eff;
                color: #fff;
            }

            .action-btn .icon {
                font-size: 20px;
                margin-right: 8px;
            }

        @@media (max-width: 500px) {
            .profile {
                padding: 18px 8px 12px 8px;
            }

            .section-item, .moments-row {
                padding-left: 8px;
                padding-right: 8px;
            }
        }
    </style>
</head>
<body>
    <div class="status-bar"></div>
    <div class="header">
        <button class="back">&#8592;</button>
    </div>
    <div class="profile">
        <img class="avatar" src="@ViewBag.customer.img_url" alt="头像">
        <div class="profile-info">
            <div class="profile-row">
                <span class="nickname">@ViewBag.customer.nick</span>
                <span class="verified">👤</span>
            </div>
            <div class="meta">抖音号：@ViewBag.customer.dou_user</div>
            @if (ViewBag.customer.address != "")
            {
                <div class="meta">地区：@ViewBag.customer.address</div>
            }
            <div class="meta">@ViewBag.customer.demo</div>
        </div>
    </div>
    <div class="section-list">
        <a class="section-item" href="info?id=@ViewBag.customer.id" style="text-decoration:none;color:inherit;">用户资料 <span class="arrow">&#8250;</span></a>
    </div>
    <div class="section-list">
        <a class="section-item" href="javascript:del_customer(@ViewBag.customer.id);" style="text-decoration: none; color: orangered; justify-content: center">删除用户 </a>
    </div>
    @*<a class="moments-row" href="photo.html" style="text-decoration:none;color:inherit;padding:8px;">
            <span class="moments-label">朋友圈</span>
            <div class="moments-photos">
                <img class="moments-photo" src="https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=facearea&w=200&h=200" alt="1">
                <img class="moments-photo" src="https://images.unsplash.com/photo-1465101046530-73398c7f28ca?auto=format&fit=facearea&w=200&h=200" alt="2">
                <img class="moments-photo" src="https://images.unsplash.com/photo-1500534314209-a25ddb2bd429?auto=format&fit=facearea&w=200&h=200" alt="3">
                <img class="moments-photo" src="https://images.unsplash.com/photo-1519125323398-675f0ddb6308?auto=format&fit=facearea&w=200&h=200" alt="4">
            </div>
            <span class="moments-arrow">&#8250;</span>
        </a>*@

    <script type="text/javascript" src="@UtilityStatic.ConfigHelper.GetConfigString("ResourceUrl")/jquery/jquery.js"></script>
    <script type="text/javascript" src="@UtilityStatic.ConfigHelper.GetConfigString("ResourceUrl")/layui/layui.js"></script>
    <script>
        layui.use('form', function () {
            var form = layui.form;
        });

        // 返回列表页
        $('.back').on('click', function () {
            window.location.href = "/PCrm/Info/List";
        });

        function del_customer(id) {
            layer.confirm('是否确认删除?', { icon: 3, title: '提示' }, function (index) {
                $.ajax({
                    type: "POST",
                    url: "/PCrm/Info/Del",
                    data: { id: id },
                    async: false,
                    dataType: 'json',
                    success: function (e) {
                        if (e.code == 0) {
                            layer.msg(e.msg, {
                                icon: 6
                                , shade: 0
                            });
                            location.href = '/PCrm/Info/List';
                        } else {
                            layer.msg(e.msg, {
                                icon: 5
                                , shade: 0
                            });
                        }
                    },
                    error: function () {
                        alert('操作失败');
                    }
                });

                layer.close(index);
            });
        }
    </script>
</body>
</html>