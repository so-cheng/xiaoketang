                                                                                                                        display: flex;
                                                                                                                        justify-content: center;
                                                                                                                        align-items: center;
                                                                                                                        min-height: 100vh;
                                                                                                                        padding: 20px;
                                                                                                                    }

                                                                                                                    .print-container {
                                                                                                                        text-align: center;
                                                                                                                        max-width: 400px;
                                                                                                                        width: 100%;
                                                                                                                    }

                                                                                                                    .restaurant-logo {
                                                                                                                        font-size: 24px;
                                                                                                                        font-weight: bold;
                                                                                                                        color: #667eea;
                                                                                                                        margin-bottom: 20px;
                                                                                                                    }

                                                                                                                    .table-title {
                                                                                                                        font-size: 28px;
                                                                                                                        font-weight: bold;
                                                                                                                        color: #333;
                                                                                                                        margin-bottom: 10px;
                                                                                                                    }

                                                                                                                    .table-info {
                                                                                                                        font-size: 16px;
                                                                                                                        color: #666;
                                                                                                                        margin-bottom: 30px;
                                                                                                                    }

                                                                                                                    .qr-code-container {
                                                                                                                        background: #f8f9fa;
                                                                                                                        border: 3px solid #333;
                                                                                                                        border-radius: 12px;
                                                                                                                        padding: 30px;
                                                                                                                        margin: 20px 0;
                                                                                                                        display: inline-block;
                                                                                                                        position: relative;
                                                                                                                    }

                                                                                                                    .qr-code {
                                                                                                                        width: 200px;
                                                                                                                        height: 200px;
                                                                                                                        background: white;
                                                                                                                        border: 2px solid #333;
                                                                                                                        border-radius: 8px;
                                                                                                                        display: flex;
                                                                                                                        align-items: center;
                                                                                                                        justify-content: center;
                                                                                                                        position: relative;
                                                                                                                        margin: 0 auto;
                                                                                                                    }

                                                                                                                    .qr-pattern {
                                                                                                                        width: 180px;
                                                                                                                        height: 180px;
                                                                                                                        background:
                                                                                                                            linear-gradient(45deg, #000 25%, transparent 25%),
                                                                                                                            linear-gradient(-45deg, #000 25%, transparent 25%),
                                                                                                                            linear-gradient(45deg, transparent 75%, #000 75%),
                                                                                                                            linear-gradient(-45deg, transparent 75%, #000 75%);
                                                                                                                        background-size: 20px 20px;
                                                                                                                        background-position: 0 0, 0 10px, 10px -10px, -10px 0px;
                                                                                                                    }

                                                                                                                    .scan-text {
                                                                                                                        font-size: 18px;
                                                                                                                        font-weight: bold;
                                                                                                                        color: #333;
                                                                                                                        margin-top: 20px;
                                                                                                                    }

                                                                                                                    .instructions {
                                                                                                                        font-size: 14px;
                                                                                                                        color: #666;
                                                                                                                        margin-top: 10px;
                                                                                                                        line-height: 1.5;
                                                                                                                    }

                                                                                                                    .footer {
                                                                                                                        margin-top: 30px;
                                                                                                                        font-size: 12px;
                                                                                                                        color: #999;
                                                                                                                    }

                                                                                                                    @@media print {
                                                                                                                        body {
                                                                                                                            margin: 0;
                                                                                                                            padding: 10px;
                                                                                                                        }

                                                                                                                        .print-container {
                                                                                                                            max-width: none;
                                                                                                                            width: 100%;
                                                                                                                        }
                                                                                                                    }
                                                                                                                </style>
                                                                                                            </head>
                                                                                                            <body>
                                                                                                                <div class="print-container">
                                                                                                                     <div class="restaurant-logo"> 千广传媒直播间</div>
                                                                                                                     <div class="table-title">直播间 ${tableName}</div>
                                                                                                                    <div class="qr-code-container">
                                                                                                                        <div class="qr-code">
                                                                                                                            <div class="qr-pattern">
                                                                                                                      <img src="${url}" style="width: 180px; height: 180px;" alt="二维码">
                                                                                                                      </div>
                                                                                                                        </div>
                                                                                                                    </div>

                                                                                                                     <div class="scan-text">扫码直播</div>
                                                                                                                     <div class="instructions">
                                                                                                                         请使用手机扫描上方二维码<br>
                                                                                                                         即可进入直播间页面
                                                                                                                     </div>

                                                                                                                    <div class="footer">
                                                                                                                        生成时间：${new Date().toLocaleString()}
                                                                                                                    </div>
                                                                                                                </div>
                                                                                                            </body>
                                                                                                            </html>`;

            // 写入内容并打印
            printWindow.document.write(printHTML);
            printWindow.document.close();

            // 等待内容加载完成后打印
            printWindow.onload = function () {
                printWindow.focus();
                printWindow.print();
                printWindow.close();
            };
        }

        // 生成二维码内容（模拟）
        function generateQRCodeContent(tableName) {
            // 这里可以生成真实的二维码内容
            // 例如：https://restaurant.com/order?table=${tableName}
            return `https://restaurant.com/order?table=${tableName}`;
        }

        // 批量打印所有直播间二维码
        function printAllQRCodes() {
            let filteredTables = currentFilter === 'all'
                ? tablesData
                : tablesData.filter(table => table.cate_id === currentFilter);

            // 应用状态筛选
            if (currentStatusFilter !== 'all') {
                const statusNumber = parseInt(currentStatusFilter);
                filteredTables = filteredTables.filter(table => table.status === statusNumber);
            }

            if (filteredTables.length === 0) {
                alert('没有可打印的直播间');
                return;
            }

            if (confirm(`确定要打印当前筛选的 ${filteredTables.length} 个直播间二维码吗？`)) {
                // 创建打印窗口
                const printWindow = window.open('', '_blank', 'width=1200,height=800');

                // 生成批量打印HTML
                const printHTML = generateBatchPrintHTML(filteredTables);

                // 写入内容并打印
                printWindow.document.write(printHTML);
                printWindow.document.close();

                // 等待内容加载完成后打印
                printWindow.onload = function () {
                    printWindow.focus();
                    printWindow.print();
                    printWindow.close();
                };
            }
        }
        // 生成批量打印HTML
        function generateBatchPrintHTML(tables) {
            const tableCards = tables.map(table => `
                                                                                                             <div class="table-print-card">
                                                                                                                 <div class="table-title">直播间: ${table.name}</div>
                                                                                                                 <div class="qr-code-container">
                                                                                                                     <div class="qr-code">
                                                                                                                         <div class="qr-pattern">
                                                                                                                             <div class="scan-text">
                                                                                                                               <img  src="${table.url}"style="width: 120px; height: 120px;" alt="二维码">
                                                                                                                              </div>
                                                                                                                         </div>
                                                                                                                     </div>
                                                                                                                 </div>
                                                                                                             </div>
                                                                                                        `).join('');

            return `
                                                                                                            <!DOCTYPE html>
                                                                                                            <html lang="zh-CN">
                                                                                                            <head>
                                                                                                                <meta charset="UTF-8">
                                                                                                                <meta name="viewport" content="width=device-width, initial-scale=1.0">
                                                                                                                 <title>直播间二维码批量打印</title>
                                                                                                                <style>
                                                                                                                    * {
                                                                                                                        margin: 0;
                                                                                                                        padding: 0;
                                                                                                                        box-sizing: border-box;
                                                                                                                    }

                                                                                                                    body {
                                                                                                                        font-family: 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
                                                                                                                        background: white;
                                                                                                                        color: #333;
                                                                                                                        padding: 20px;
                                                                                                                    }

                                                                                                                    .print-header {
                                                                                                                        text-align: center;
