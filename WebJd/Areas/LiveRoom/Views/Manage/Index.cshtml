        // 重置所有筛选
        function resetAllFilters() {
            // 重置区域筛选
            currentFilter = 'all';
            document.querySelectorAll('.area-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelector('[data-area="all"]').classList.add('active');

            // 重置状态筛选
            currentStatusFilter = 'all';
            document.querySelectorAll('.stat-card').forEach(card => {
                card.classList.remove('active');
            });
            document.querySelector('[data-filter="all"]').classList.add('active');

            // 清空搜索框
            document.getElementById('searchInput').value = '';

            // 重新渲染
            renderTables();
        }


        // 搜索功能
        document.getElementById('searchInput').addEventListener('input', function (e) {
            const searchTerm = e.target.value.toLowerCase();
            let filteredTables = tablesData.filter(table =>
                table.name.toLowerCase().includes(searchTerm)
            );

            // 应用区域筛选
            if (currentFilter !== 'all') {
                filteredTables = filteredTables.filter(table => table.area === currentFilter);
            }

            // 应用状态筛选
            if (currentStatusFilter !== 'all') {
                const statusNumber = parseInt(currentStatusFilter);
                filteredTables = filteredTables.filter(table => table.status === statusNumber);
            }

            const grid = document.getElementById('tablesGrid');
            grid.innerHTML = filteredTables.map(table => `
                                                                                                            <div class="table-card" data-table-id="${table.id}">
                                                                                                                <div class="table-header">
                                                                                                                    <div class="table-name">${table.name}</div>
                                                                                                                    <div class="table-status status-${table.status}">
                                                                                                                        ${getStatusText(table.status)}
                                                                                                                    </div>
                                                                                                                </div>
                                                                                                                <div class="qr-container">
                                                                                                                     <div class="qr-code" onclick="showQRCode('${table.name}')">
                                                                                                                         <div><img src="http://t-x-m.com/QRCode/qrcode.asp?bc1=http%3A%2F%2Fassister.hospital.kedianbao.com%2FShuye%2FOpeate%2FQrToUrl%3Fid%3D${table.id}&bc2=33&bc3=3.5&bc4=3.5&bc5=1&bc6=1&bc7=1&bc8=5&bc9=1" style="width: 120px; height: 120px;" alt="二维码"></div>
                                                                                                                     </div>
                                                                                                                </div>
                                                                                                                <div class="table-info">
                                                                                                                    <div class="table-capacity"> ${table.catename}</div>
                                                                                                                    <div class="table-actions">
                                                                                                                        <button class="action-btn btn-print" onclick="printQRCode('${table.name}', ${table.capacity})">🖨️ 打印</button>
                                                                                                                    </div>
                                                                                                                </div>
                                                                                                            </div>
                                                                                                        `).join('');
        });


        // 页面加载完成后初始化
        document.addEventListener('DOMContentLoaded', init);
    </script>
